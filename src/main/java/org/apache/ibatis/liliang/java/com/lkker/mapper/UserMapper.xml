<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.ibatis.liliang.java.com.lkker.mapper.UserMapper">
    <select id="selectUserById" parameterType="int" resultType="org.apache.ibatis.liliang.java.com.lkker.entity.User">
    select * from user where id = #{id}
  </select>

    <select id="selectUserByName" parameterType="String" resultType="org.apache.ibatis.liliang.java.com.lkker.entity.User">
    select * from user where name = #{name}
  </select>
</mapper>